<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <environment include="Development">
        <link rel="stylesheet" asp-href-include="css/*" asp-href-exclude="css/all.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" asp-href-include="css/all.min.css" />
    </environment>
</head>
<body>

    <div class="container">
        <div class="col-md-2">
            <img asp-append-version="true" alt="Logo" src="~/img/Globomantic_Logo.png" style="max-width:100%" />
        </div>
        <div class="col-md-10 titlecol">
            <span class="title">@ViewBag.Title</span>
        </div>
        <div class="row">
            <div class="col-md-12">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>